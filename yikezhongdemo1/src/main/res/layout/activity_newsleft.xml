<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_left"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="left"
    android:layout_height="match_parent">

    <!-- 侧滑布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@drawable/drawerlayout_background"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <!--头部替换布局-->
            <LinearLayout
                android:id="@+id/lefttop2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="50dp"
                    >
                    <ImageView
                        android:id="@+id/leftimg"
                        android:layout_marginLeft="8dp"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/raw_1499936862"
                        android:layout_gravity="center"
                        android:background="#ccc"
                        />
                    <TextView
                        android:id="@+id/leftname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="椰果奶茶"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:textColor="#fff"
                        android:textSize="25sp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@drawable/sex"
                        android:layout_marginTop="10dp"
                        android:textColor="#9297A8"
                        android:layout_marginLeft="90dp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="编辑个性签名"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>
            <!--头部默认布局-->
            <LinearLayout
                android:id="@+id/lefttop1"
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/iv_phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:src="@drawable/raw_1499936862"
                    />
                <TextView
                    android:id="@+id/iv_qq"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:text="椰汁奶茶"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    />
                <ImageView
                    android:id="@+id/iv_weibo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:src="@mipmap/ic_launcher"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_left"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="5dp"
        android:padding="15dp"></ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="日夜切换"
            android:layout_marginLeft="20dp"
            />
        <CheckBox
            android:id="@+id/check"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:button="@null"
            android:background="#ccc"
            android:layout_marginLeft="200dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_load"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/raw_1499947056" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="我的作品" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_yejian"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical">

            <!-- <ImageView
                 android:layout_width="50dp"
                 android:layout_height="30dp"
                 android:src="@mipmap/nighticon_leftdrawer_pressed" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/raw_1499947157" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="设置" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>